# Telegram Bot Configuration
# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Twitter API Configuration
# Get this from https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Bot Behavior Configuration
# Check interval in seconds (900 = 15 minutes)
CHECK_INTERVAL=900
# Maximum tweets to check per API call (5 is safe for rate limits)
MAX_TWEETS_PER_CHECK=5

# Optional: Advanced Configuration
# Twitter target username (change if you want to monitor a different account)
TWITTER_TARGET_USER=AboutNodKrai
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
